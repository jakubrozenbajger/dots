#!/bin/sh

case "$1" in
    lock)
        lockscreen
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
        lockscreen &
        sleep 1 && systemctl suspend
        ;;
    hibernate)
        lockscreen &
        sleep 1 && systemctl hibernate
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "== ! i3exit: missing or invalid argument ! =="
        echo "Try again with: lock | logout | suspend | hibernate | reboot | shutdown"
        exit 2
esac

exit 0
