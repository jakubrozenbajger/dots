#!/bin/sh

datestr="%A %d.%m.%Y"

c_bg="#000000"
c_fg="#ebdbb2"
c_err="#dc322f"
c_ver="#268bd2"
c_trans="#00000000"

locker="$(command -v i3lock-color i3lock 2>&1 | head -n1)"

"$locker" \
	-t -c "$c_bg" \
	--clock --force-clock --datestr "$datestr" \
  --timecolor="$c_fg" --datecolor="$c_fg" \
	--keyhlcolor="$c_bg" --bshlcolor="$c_bg" \
	--insidecolor="$c_trans" --ringcolor="$c_fg" \
  --insidevercolor="$c_trans" --ringvercolor="$c_ver" \
  --insidewrongcolor="$c_trans" --ringwrongcolor="$c_err" \
	--radius=120 --ring-width=3 \
  --veriftext='' --wrongtext='' --noinputtext=''
