#!/bin/sh

cmd="$(echo "
 lock
 exit
 suspend
 reboot
 shutdown
" | xargs -n2 \
  | rofi -dmenu -width 15 -hide-scrollbar -lines 5 -i -no-custom -p "Exit?" \
  | awk '{print $2}'
)"

case "$cmd" in
    lock)
        lockscreen
        ;;
    exit)
        i3-msg exit #todo: support for xmonad
        ;;
    suspend)
        lockscreen &
        sleep 1; systemctl suspend
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "missing or invalid argument"
        exit 2
esac
